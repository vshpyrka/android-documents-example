<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application android:theme="@style/Theme.AppCompat">

        <activity
            android:name="com.example.documents.DocumentsLauncherActivity"
            android:exported="false"
            android:persistableMode="persistAcrossReboots" />

        <activity
            android:name=".single_doc.SingleDocumentLauncherActivity"
            android:exported="false" />

        <activity
            android:name="com.example.documents.single_doc.DocumentActivity"
            android:autoRemoveFromRecents="true"
            android:documentLaunchMode="intoExisting"
            android:exported="false"
            android:launchMode="standard" />

        <activity
            android:name=".multi_instance_doc.MultipleDocumentsLauncherActivity"
            android:exported="false" />

        <activity android:name=".multi_instance_doc.DocumentActivity"
            android:autoRemoveFromRecents="true"
            android:documentLaunchMode="always"
            android:exported="false" />

    </application>

</manifest>
